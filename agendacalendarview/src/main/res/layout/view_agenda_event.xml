<?xml version="1.0" encoding="utf-8"?>
<com.github.tibolte.agendacalendarview.agenda.AgendaEventView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp">

    <!-- Time or recurrence info -->
    <LinearLayout
        android:id="@+id/view_agenda_event_time_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_agenda_event_time"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/view_agenda_event_duration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2d"
                android:textColor="@color/calendar_text_default"
                android:textSize="11dp" />

        </LinearLayout>

        <View
            android:id="@+id/view_agenda_event_circle"
            android:layout_width="@dimen/circle_event_color_size"
            android:layout_height="@dimen/circle_event_color_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:background="@drawable/event_color_circle" />

    </LinearLayout>

    <!-- Description -->
    <LinearLayout
        android:id="@+id/view_agenda_event_description_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/view_agenda_event_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/view_agenda_event_location_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_location" />

            <TextView
                android:id="@+id/view_agenda_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/calendar_text_default"
                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Weather info -->
    <LinearLayout
        android:id="@+id/view_agenda_event_weather_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.github.tibolte.agendacalendarview.weather.WeatherIconView
            android:id="@+id/view_agenda_event_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            custom:weatherIconResource="@string/wi_day_sunny"
            custom:weatherIconColor="@android:color/black"
            custom:weatherIconSize="14"/>

        <TextView
            android:id="@+id/view_agenda_event_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

    </LinearLayout>

</com.github.tibolte.agendacalendarview.agenda.AgendaEventView>